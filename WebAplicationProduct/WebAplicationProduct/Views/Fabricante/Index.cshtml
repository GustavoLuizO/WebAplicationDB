@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<WebAplicationProduct.Models.Fabricante>

@{
    ViewData["Title"] = "Listagens de Fabricantes";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FabricanteID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.FabricanteID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.FabricanteID">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="row">
    @Html.PagedListPager(Model, pagina=>Url.Action("Index",new{pagina}))
</div>
